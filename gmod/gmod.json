{
  "type": "srcds",
  "display": "Garry's Mod",
  "data": {
    "gamemode": {
      "value": "sandbox",
      "required": true,
      "desc": "Gamemode to load",
      "display": "Gamemode",
      "internal": false,
      "userEdit": true
    },
    "map": {
      "value": "gm_construct",
      "required": true,
      "desc": "Map to load by default",
      "display": "Map",
      "internal": false,
      "userEdit": true
    },
    "maxplayers": {
      "value": "20",
      "required": true,
      "desc": "Max players allowed on server",
      "display": "Max Players",
      "internal": false,
      "type": "integer"
    },
    "port": {
      "value": "27015",
      "required": true,
      "desc": "What port to bind the server to",
      "display": "Port",
      "internal": false,
      "type": "integer"
    },
    "wscollection": {
      "value": "",
      "required": false,
      "desc": "Specify a ws collection the server should load. *optional*",
      "display": "Workshop Collection ID",
      "internal": false,
      "userEdit": true
    },
    "steamaccounttoken": {
      "value": "",
      "required": false,
      "desc": "Token for a game server account. *optional* (Get one here: https://steamcommunity.com/dev/managegameservers)",
      "display": "Steam Game Server Account Token",
      "internal": false,
      "userEdit": true
    }
  },
  "install": [
    {
      "type": "steamgamedl",
      "appId": "4020",
      "if": "env == 'host'"
    },
    {
      "type": "command",
      "commands": [
        "steamcmd +force_install_dir /pufferpanel +login anonymous +app_update 4020 +quit"
      ],
      "if": "env == 'docker'"
    },
    {
      "type": "command",
      "commands": [
        "chmod +x srcds_run"
      ]
    }
  ],
  "run": {
    "command": "./srcds_run +port ${port} -game garrysmod -console +gamemode ${gamemode} +map ${map} +maxplayers ${maxplayers} +host_workshop_collection ${wscollection} +sv_setsteamaccount ${steamaccounttoken} -norestart",
    "stop": "exit"
  },
  "environment": {
    "type": "host"
  },
  "supportedEnvironments": [
    {
      "type": "host"
    },
    {
      "type": "docker",
      "image": "steamcmd/steamcmd"
    }
  ],
  "requirements": {
    "os": "linux",
    "arch": "amd64"
  }
}
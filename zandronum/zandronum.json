{
  "type": "doom",
  "display": "Zandronum",
  "data": {
    "version": {
      "value": "2.1.2",
      "required": true,
      "desc": "Which version of Zandronum you want to download.",
      "display": "Version",
      "internal": false
    }
  },
  "install": [ {
      "type": "download",
      "files": [
        "https://zandronum.com/downloads/zandronum${version}-linux-x86_64.tar.bz2",
        "http://distro.ibiblio.org/pub/linux/distributions/slitaz/sources/packages/d/doom1.wad"
      ]
    },
    {
      "type": "command",
      "commands": [
        "tar xvjf *.tar.bz2"
      ]
    },
    {
      "type": "writefile",
      "text": "",
      "target": "whitelist.txt"
    },
    {
      "type": "writefile",
      "text": "",
      "target": "banlist.txt"
    },
    {
      "type": "writefile",
      "text": "",
      "target": "adminlist.txt"
    }
  ],
  "run": {
    "command": "./zandronum-server -host ${players}",
    "stop": "Quit"
  },
  "environment": {
    "type": "standard"
  },
  "requirements": {
    "binaries": [ "tar" ],
    "os": "linux",
    "arch": "amd64"
  }
}
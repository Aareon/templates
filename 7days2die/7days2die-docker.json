{
  "type": "srcds",
  "display": "7 Days to Die (Docker)",
  "data": {
    "serverconfig": {
      "type": "string",
      "desc": "Relative path to server config file containing all setup vars. (default: ./serverconfig.xml)",
      "display": "Server config file",
      "required": true,
      "value": "./serverconfig.xml",
      "userEdit": true
    }
  },
  "install": [
    {
      "commands": [
        "steamcmd +login anonymous +force_install_dir . +app_update 294420 +quit"
      ],
      "type": "command"
    }
  ],
  "run": {
    "command": "./startserver.sh -configfile=${serverconfig}",
    "stopCode": 2,
    "environmentVars": {
      "LD_LIBRARY_PATH": "./linux64:$LD_LIBRARY_PATH"
    }
  },
  "environment": {
    "image": "steamcmd/steamcmd",
    "type": "docker"
  },
  "supportedEnvironments": [
    {
      "image": "steamcmd/steamcmd",
      "type": "docker"
    }
  ],
  "requirements": {
    "arch": "amd64"
  }
}
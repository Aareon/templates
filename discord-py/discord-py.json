{
  "type": "discord",
  "display": "discord.py Bot",
  "data": {
    "bot-py-file": {
      "type": "string",
      "value": "bot.py",
      "display": "Main bot file",
      "desc": "The main bot file.",
      "required": true,
      "userEdit": true
    },
    "req-txt-file": {
      "type": "string",
      "value": "requirements.txt",
      "display": "Requirements txt file",
      "desc": "The file used to install the python libs.",
      "required": true,
      "userEdit": true
    }
  },
  "install": [
    {
      "type": "command",
      "commands": [
        "python3 -m pip install -r ${req-txt-file}"
      ]
    }
  ],
  "run": {
    "command": "python3 ${bot-py-file}",
    "stop": "stop",
    "stdin": {
      "type": "stdin"
    },
    "autostart": false,
    "autorecover": false,
    "autorestart": false
  },
  "environment": {
    "type": "host"
  },
  "supportedEnvironments": [
    {
      "type": "host"
    },
    {
      "type": "docker",
      "image": "python",
      "networkMode": "host"
    }
  ],
  "requirements": {
    "binaries": [
      "python3"
    ]
  }
}

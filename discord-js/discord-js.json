{
  "type": "discord",
  "display": "discord.js",
  "data": {
    "bot-js-file": {
      "type": "string",
      "value": "bot.js",
      "display": "Main bot file",
      "desc": "The main bot file.",
      "required": true,
      "userEdit": false
    }
  },
  "install": [
    {
      "type": "command",
      "commands": [
        "npm i"
      ]
    }
  ],
  "run": {
    "command": "node ./${bot-js-file}",
    "stop": "stop",
    "stdin": {
      "type": "stdin"
    },
    "autostart": false,
    "autorecover": false,
    "autorestart": false
  },
  "environment": {
    "type": "host"
  },
  "supportedEnvironments": [
    {
      "type": "host"
    },
    {
      "type": "docker",
      "image": "node"
    }
  ],
  "requirements": {
    "binaries": [
      "node",
      "npm"
    ]
  }
}

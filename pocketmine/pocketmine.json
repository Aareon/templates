{
  "type": "minecraft-bedrock",
  "display": "PocketMine-MP",
  "data": {
    "ip": {
      "type": "",
      "value": "0.0.0.0",
      "display": "IP",
      "desc": "What IP to bind the server to",
      "required": true
    },
    "port": {
      "type": "integer",
      "value": "19132",
      "display": "Port",
      "desc": "What port to bind the server to",
      "required": true
    }
  },
  "install": [
    {
      "type": "download",
      "files": "https://raw.githubusercontent.com/pmmp/get.pmmp.io/stable/installer.sh"
    },
    {
      "type": "command",
      "commands": [
        "chmod +x ./installer.sh",
        "./installer.sh -r"
      ]
    },
    {
      "type": "writefile",
      "target": "server.properties",
      "text": "server-ip=${ip}\nserver-port=${port}\n"
    }
  ],
  "run": {
    "command": "./start.sh --no-wizard",
    "stop": "stop",
    "stdin": {},
    "stdout": {}
  },
  "environment": {
    "type": "host"
  },
  "requirements": {
    "os": "linux",
    "arch": "amd64"
  }
}
